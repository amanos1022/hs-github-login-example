  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "command": "",
      "script": "${workspaceRoot}/bin/rails",
      "useBundler": false,
      "pathToBundler": "${workspaceFolder}/bin/bundle",
      "rdbgPath": "${workspaceFolder}/bin/rdbg",
      "args": [
        "s"
      ],
      "env": {
        "PORT": "3001"
      }
    },
    {
      "name": "Rails test",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "command": "",
      "script": "${workspaceRoot}/bin/rails",
      "useBundler": false,
      "pathToBundler": "${workspaceFolder}/bin/bundle",
      "rdbgPath": "${workspaceFolder}/bin/rdbg",
      "args": [
        "test",
        "${file}"
      ],
    }
  ]
}